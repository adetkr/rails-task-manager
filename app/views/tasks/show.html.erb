<div class="nav">
<h1> <%= @task.title %></h1>

<div class="links">
  <i class="fas fa-edit"></i>
  <%= link_to "Edit Task", edit_path(@task) %>
</div>

</div>


<p id="task-details"> <%= @task.details %> </p>


<% if !@task.completed || @task.completed.nil? %>
  <input type="checkbox" id=<%= @task.id %> >
  <label for=<%= @task.id %> >  This task is not completed yet </label>
<% else %>
  <input type="checkbox" id=<%= @task.id %> checked>
  <label for=<%= @task.id %> >  This task is completed </label>
<% end %>

<hr>

<div class="links">
  <i class="fas fa-undo"></i>
  <%= link_to "Back to list", index_path %>
</div>


