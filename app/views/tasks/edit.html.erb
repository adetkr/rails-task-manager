<h1> Edit Task</h1>

<%= form_for :task , method: :patch do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit "Edit Task" %>
<% end %>

<hr>

<div class="links">
  <i class="fas fa-undo"></i>
  <%= link_to "Back to list", index_path %>
</div>
