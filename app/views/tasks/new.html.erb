<h1> New Task</h1>

<%= form_for :task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.submit "Create Task"%>
<% end %>

<hr>

<div class="links">
  <i class="fas fa-undo"></i>
  <%= link_to "Back to list", index_path %>
</div>
